/* pages/addcomment/index.wxss */
.product-info{
  /* height: 60px; */
  background: #fff;
  width: 100%;
  border-top: 1px solid #ddd;
  padding: 10px;
  padding-top:0px; 
}

.pic-list{
  margin-top:10px;
  display:block;
  height:80px;
  position:relative;
  float:left;
}

.picbox {
  width:80px;
  height:80px;
  margin-left:10px;
  float:left;
  position: relative;
}

.picbox image{
  width:80px;
  height:80px;
}
.picclose{
  position: absolute;
  right: 0px;
  top: 0px;
  background:#fff;
  width:15px;
  height:15px;
  line-height:15px;
  text-align:center;
}

.product-comment-box{
  background: #fff;
  padding: 10px;
  margin:-20px 10px 10px 10px;
  border-radius: 5px;
}

.comment-cont{
  max-height: 40px;
  width: auto;
  padding: 10px;
}

.comment-photo {
  margin-top: 10px;
  display: block;
  width: 80px;
  height: 80px;
  border: 1px dashed #eee;
  position: relative;
  float:left;
}

.comment-photo-img{
  height: 32px;
  width: 32px;
  padding: 24px;
  padding-top:13px; 
  text-align: center;
  vertical-align: middle;
  position: absolute;
}

.photo-title{
  font-size: 12px;
  color: #8a8a8a;
  position: absolute;
  top: 48px;
  text-align: center;
  width: 100%;
}

.order-btn {
  margin-top: 20px;
  margin: 20px 10px 0px 10px;
  font-size: 13px;
  line-height: 40px; 
  background: #FF9500;
  border: 1px solid #FF9500;
  color: #fff;
}

.cancle-btn {
  margin: 10px 10px;
  font-size: 13px;
  line-height: 40px; 
  border: 1px solid #efefef;
  color: #333;  
}

.clear{
  clear: both;
}

.order-img{
  padding-bottom: 5px;
  height: 40px;
  padding:0px;
}

.order-product-img{
  width: 40px;
  height: 40px;
}

.order-right{
  top: 17px;
  left: 50px;
  font-size: 16px;
  color: #888;
}

.product-list{
  position: relative;
  padding-top: 10px;
}

.ds-home-menu {
  width: 100%;
  height: 60px;
  border-bottom: 1px solid #ddd;
  padding-top: 10px;
  margin-top: -1px; 
  position:relative;
}

.order-desc {
  font-size: 12px;
  line-height: 20px;
}

.order-img {
  float: left;
}

.order-img, .order-product-img{
  width: 50px;
  height: 50px;
  overflow: hidden;
}

.order-right {
  margin-left: 60px;
  display: block;
  font-size: 14px; 
}

.order-list {
  width: 100%;
}

.order-item {
  padding: 15px;
  background: #fff;
  border-radius: 5px;
  margin:0 10px 0px 10px;
}

.light-desc-text {
  color:#000;
  font-size: 16px;
  display: block; 
  overflow: hidden; 
  text-overflow:ellipsis;       
  white-space: nowrap;
}

.pro-desc{
  color: #aaa;
  font-size: 13px;
}