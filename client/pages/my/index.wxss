/* pages/my/index.wxss */
.ds-my-head-box {
  background: #fff;
  height: 130px;
  text-align: center; 
  border-bottom: 1px solid rgba(0,0,0,.15);
}

.my-item-box{
  //border-bottom: 1px solid rgba(0,0,0,.15);
}

.my-head {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  position: relative;
  top: 20px;
  border: 1px solid #ddd;
}

.my-order-num {
  position: absolute;
  border: 1px solid #FF9500;
  color: #FF9500;
  background: #ffffff;
  padding: 4px;
  border-radius: 10px;
  font-size: 12px;
  line-height: 10px;
  text-align: center;
  width: 10px;
  height: 10px;
  top: -4px;
  right: 24px;
}

.my-username {
  position: relative;
  top: 20px;
  font-size: 14px;
  text-align: center;
  display: block;
  background-color: transparent; 
  margin: 0;
  border:0;
  padding: 0;
  color: #333;
}

.my-username::after{ border: none; }

.my-jifen {
  position: absolute;
  right: 15px;
  top: 105px;
  font-size: 12px;
  color: #aaa;
}

.ds-my-wuliu-box {
  background: #fff;
  margin-top: 10px;
  border-bottom: 1px solid rgba(0,0,0,.15);
  border-top: 1px solid rgba(0,0,0,.15);
}

.ds-look-order {
  float: left;
  font-size: 13px;
  margin-left: 5px; 
  color: #666;
}

.ds-my-all-order {
  border-bottom: 1px solid #efefef;
}

.ds-my-all-order:last-child {
  border-bottom: none;
}

.ds-my-all-order-cont {
 height: 20px;
 padding: 10px;
}

.ds-my-piece-order {
  height: 45px;
  padding-top: 10px;
  padding-bottom: 10px;
}

.ds-my-order-img {
  width: 20px;
  height: 20px;
  float: right;
}

.ds-my-wuliu-item-img {
  width: 20px;
  height: 20px;
  margin: 0 auto;
  position: relative;
  display: block;
}

.my-wuliu-item .ds-home-menu{
  width: 25%;
  float: left;
  position: relative;
}

.my-wuliu-title {
  font-size: 13px;
  color: #666;
  position: relative;
  text-align: center;
  display: block;
  left: 0px;
  top: 5px;
}

.my-service-money-item {
  background: #fff;
  margin-top: 10px;
}

.my-service-addr-item {
  background: #fff;
}

.my-service-about-item {
  background: #fff;
}

.my-service-title {
  font-size: 13px;
  color: #666;
  position: relative;
  display: block;
  left: 10px;
  top: 0px; 
}

.my-comp-addr {
  position: absolute;
  top: 350px;
  width: 100%;
  text-align: center;
}

.addr-text {
  font-size: 13px;
  color: #bbb;
}

.container {
  min-height: 600px;
}

.income-tip {
  transform: scale(.7);
  border: 1px solid #FFF5F7;
  background: #FFF5F7;
  border-radius: 2px;
  padding: 1px 3px;
  line-height: 1;
  color: #FF9500;
  width: 140px;
  font-size: 11px;
  margin-left: 10px; 
}

@media screen and (max-width: 320px) {
  .container {
    min-height: 200px;
  }
}
