/* pages/orderprocess/index.wxss */

page {
  width: 100%;
  background: #efefef;
}

.order-content {
  height: 100%;
  width: 100%;
}

.order-list {
  width: 100%;
}

.order-item {
  padding: 15px;
  margin-bottom: 10px;
  background: #fff;
  border-radius: 5px;
  margin: 0px 10px 10px 10px;
}

.order-img {
  float: left;
}

.order-img, .order-product-img {
  width: 50px;
  height: 50px;
  overflow: hidden;
}

.order-right {
  margin-left: 60px;
  display: block;
  font-size: 14px;
}

.ds-home-menu {
  width: 100%;
  height: 60px;
  border-bottom: 1px solid #ddd;
  padding-top: 10px;
  margin-top: -1px;
}

.order-desc {
  font-size: 12px;
  line-height: 20px;
}

.order-addr {
  float: left;
  display: block;
  color: #999;
}

.order-price {
  display: block;
  float: right;
  color: #ff9500;
  font-size: 20px;
}

.order-addr {
  display: block;
}

.order {
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

.order-state {
  margin-top: 5px;
}

.state {
  font-size: 14px;
  border: 1px solid #fff5f7;
  background: #ff9500;
  line-height: 1;
  color: #fff;
  border-radius: 4px;
  padding: 2px 5px;
}

.time {
  float: right;
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

.order-op {
  display: inline-block;
  font-size: 13px;
  margin-left: 10px;
  color: #ff9500;
}

.light-desc-text {
  font-size: 16px;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pro-desc {
  color: #aaa;
  font-size: 13px;
}

.empty-shop {
  position: absolute;
  top: 50px;
  margin-left:50%;
  left: -60px;
}

.empty-title {
  color: #aaa;
}

.return-btn {
  margin-top: 10px;
  font-size: 15px;
  background: #ff9500;
  color: #fff;
}

.my-comp-addr {
  width: 100%;
  text-align: center;
  margin-bottom: 50px;
}

.addr-text {
  font-size: 13px;
  color: #bbb;
}
