/* pages/sort/index.wxss */
.sort-head {
  width: 100%;
  border-bottom: 1px solid #efefef;
  background: #fff;
  height: 10px;
  font-size: 16px;
  text-align: center;
}

.sort-title {
  position: relative;
  top: 0px;
  background: #fff;
  width: 100px;
  display: inline-block;
  text-align: center;
  font-weight: bold;
}

.container {
  background: #fff;
}

.sd-list-box {
  background: #fff;
  width: 100%;
  position: absolute;
  top: 20px;
  padding-bottom: 20px;  
}

.ds-home-ad .ad-images {
   width: 100%;
   height: 150px;
   overflow: hidden;  
}

.ds-home-menus {
  position: relative;
  width: 100%;
  background: #fff;
  top: 20px;
}

.ds-home-menus .ds-home-menu {
  float: left;
  width: 25%;
  font-size: 12px;
  position: relative;
  text-align: center;
  margin-bottom: 10px;
}

.ds-home-menus .ds-home-menu .ds-menu-img {
  width: 40px;
  height: 40px;
  background: #efefef;
  border-radius: 50%;
  margin: 0 auto;
  display: block;
}

.ds-home-menus .ds-home-menu .ds-menu-text {
  width: 25%;
  text-align: center;
}

.ds-home-search {
  position: relative;
  width: 100%;
  margin: 0px 10px;
  display: block;
  background: #fff;
  float: left;
}

.ds-home-search .search-icon {
  width: 20px;
  height: 20px;
  position: absolute;
  left: 10px;
  top: 6px;
}

.ds-home-search .ds-search-text {
  border: 1px solid #efefef;
  border-radius: 5px;
  padding-left: 35px; 
  height: 30px;
  font-size: 12px;
  font-weight: 400;
  width: 63%;
  float: left;
  display: block;
}

.ds-home-search .search-bth {
  display: block;
  font-size: 12px;
  width: 20%;
  float: right;
  height: 30px;
  margin-right: 20px;
}

.sd-list-box .light-list-item {
  border-bottom: 1px solid #efefef;
  padding: 10px;
  display: block;
  height: 120px;
}

.light-list-item .light-img {
  width: 40%;
  height: 120px;
  overflow: hidden;
  border-radius: 3px;
  float: left;
}

.light-list-item .light-img .light-imgge {
  height: 120px;
  overflow: hidden;
}

.light-list-item .light-desc {
  float: right;
  width: 55%;
  margin-left: 10px;
  font-size: 12px;
  height: 120px;
  display: block;
  position: relative;
}

.light-list-item .light-desc .light-desc-text {
  font-size: 16px;
  display: block; 
  overflow: hidden; 
  text-overflow:ellipsis;       
  white-space: nowrap;
}

.light-list-item .light-desc .light-desc-price {
  font-size: 15px;
  color: #FF9500;
  display: block;
  line-height: 40px;
}

.light-list-item .light-desc .light-desc-tag {
  font-size: 13px;
  color: #aaa;
  font-weight: 300;
  display: block;
  line-height: 30px;
  position: absolute;
  bottom: 0px;
}

.ds-list-detail-url {
  position: absolute;
  right: 0px;
  top: 50px;
  display: block;
}

.ds-list-detail-url .list-detail-img {
  height: 32px;
  width: 32px;
}

@media screen and (max-width: 320px) {
.ds-home-search .ds-search-text {
    border: 1px solid #efefef;
    border-radius: 5px;
    padding-left: 35px; 
    height: 30px;
    font-size: 12px;
    font-weight: 400;
    width: 60%;
    float: left;
    display: block;
  }
  .light-list-item .light-desc .light-desc-text {
    font-size: 14px;
    display: block; 
    overflow: hidden; 
    text-overflow:ellipsis;       
    white-space: nowrap;
  }
  .light-list-item .light-desc .light-desc-price {
    font-size: 13px;
    color: #FF9500;
    display: block;
    line-height: 40px;
  }
  .light-list-item .light-desc .light-desc-tag {
    font-size: 12px;
    color: #aaa;
    font-weight: 300;
    display: block;
    line-height: 30px;
    position: absolute;
    bottom: 12px;
  }
  .sd-list-box .light-list-item {
    border-bottom: 1px solid #efefef;
    padding: 10px;
    display: block;
    height: 100px;
  }

  .light-list-item .light-img {
    width: 40%;
    height: 100px;
    overflow: hidden;
    border-radius: 3px;
    float: left;
  }

  .light-list-item .light-img .light-imgge {
    height: 100px;
    overflow: hidden;
  }

  .ds-list-detail-url .list-detail-img {
    height: 25px;
    width: 25px;
  }
}