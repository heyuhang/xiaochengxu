/**app.wxss**/
.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
}

page {
  width: 100%;
  background: #efefef;
}

.tip {
  margin-top: 50px; 
}

.tip-content {
  font-size: 13px;
  color: #999;
}

@media screen and (max-height: 732px) {
    .container {
        height: 670px;
    }
}

@media screen and (max-height: 667px) {
    .container {
        height: 600px;
    }
}

@media screen and (max-height: 630px) {
    .container {
        height: 400px;
    }
}

@media screen and (max-height: 600px) {
    .container {
        height: 505px;
    }
}

.clear {
  clear: both;
}
